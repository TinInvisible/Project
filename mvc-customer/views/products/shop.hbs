<script type="text/x-handlebars-template" id="pagination-template">
    \{{#each .}}
    <li class="page-item"><a class="page-link" href="#">\{{pageNumber}}</a></li>
    \{{/each}}

</script>



{{#extend "scripts"}}
<script>
    function loadProductPage(page) {

        $.getJSON(`/home-page/api/shop?page=${page}`, function (products) {
            var source = $('#products-template').html();
            var template = Handlebars.compile(source);
            var html = template(products);

            $('#products').html(html);

            var links = Array.from(Array(products.paging.last_page - products.paging.first_page + 1)).map((_, idx) =>
            ({
                pageNumber: idx + products.paging.first_page,
            }));

            $('#product-pagination').html(Handlebars.compile($('#pagination-template').html())(links));
            $('#product-pagination .page-link').click(function (event) {
                event.preventDefault();
                loadProductPage($(this).html());
            });
            $('#product-pagination .filter_name').click(function (event) {
                event.preventDefault();
                loadProductPage($(this).html());
            });
            $('.set-bg').each(function () {
                var bg = $(this).data('setbg');
                $(this).css('background-image', 'url(' + bg + ')');
            });
        });

    }
    loadProductPage(1);
</script>
